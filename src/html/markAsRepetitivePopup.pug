include ../mixins/radioButton

html
 head
    link(rel="stylesheet" href="https://p.trellocdn.com/power-up.min.css")
    link(rel="stylesheet" href="../css/markAsRepetitivePopup.css")
    script(src="https://trello.com/power-ups/power-up.css")
    script(src="../js/markAsRepetitivePopup.js")
 body
  div#mark-repetitive-popup
   div
    label Repeat every
    input(class="number" type="number" name="number" value="1")
    +radio-button("day", "of", "Day", "checked")
    +radio-button("week", "of", "Week")
    +radio-button("month", "of", "Month")
    +radio-button("year", "of", "Year")
    div#weekDays.u-hidden Weekdays

